{
  "name": "koa-api-template",
  "version": "1.0.0",
  "description": "Content Sytem Management build with Koa + Sequelize + NodeJS.",
  "main": "server.js",
  "engines": {
    "node": "10.17.0",
    "npm": "6.11.3"
  },
  "scripts": {
    "start": "npm run lint && babel-node src/server.js",
    "dev": "cross-env NODE_ENV=development nodemon --exec babel-node src/server.js",
    "lint": "npx eslint src/**/*.js",
    "doc": "npx jsdoc -c ./conf.json",
    "create:db": "cross-env NODE_ENV=development npx sequelize db:create",
    "migrate:db": "cross-env NODE_ENV=development npx sequelize db:migrate",
    "seed:db": "cross-env NODE_ENV=development npx sequelize db:seed:all",
    "reset:db": "cross-env NODE_ENV=development npm run create:db && npm run migrate:db",
    "test": "cross-env NODE_ENV=test jest --detectOpenHandles --forceExit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cacaudev/koa-api-template.git"
  },
  "keywords": [
    "koa",
    "api",
    "template",
    "cms"
  ],
  "author": "cacaudev",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cacaudev/koa-api-template/issues"
  },
  "homepage": "https://github.com/cacaudev/koa-api-template#readme",
  "dependencies": {
    "@koa/cors": "^3.0.0",
    "bcryptjs": "^2.4.3",
    "btoa": "^1.2.1",
    "chalk": "^2.4.2",
    "dotenv": "^8.1.0",
    "i18next": "^18.0.1",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.8.1",
    "koa-bodyparser": "^4.2.1",
    "koa-compress": "^4.0.1",
    "koa-context-validator": "^0.4.1",
    "koa-helmet": "^5.1.0",
    "koa-morgan": "^1.0.1",
    "koa-router": "^7.4.0",
    "lodash": "^4.17.15",
    "moment": "^2.27.0",
    "moment-timezone": "^0.5.27",
    "pg": "^7.12.1",
    "pg-hstore": "^2.3.3",
    "rand-token": "^0.4.0",
    "sequelize": "^5.19.2",
    "swagger-jsdoc": "^3.4.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.6.2",
    "@babel/node": "^7.6.2",
    "@babel/preset-env": "^7.6.2",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "cross-env": "^7.0.2",
    "eslint": "^6.5.1",
    "jest": "^24.9.0",
    "jsdoc": "^3.6.3",
    "nodemon": "^1.19.2",
    "sequelize-cli": "^5.5.1",
    "sequelize-mock": "^0.10.2",
    "supertest": "^4.0.2",
    "toast-jsdoc": "^1.0.2"
  }
}
